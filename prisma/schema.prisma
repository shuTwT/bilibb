// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
// 用户
model User{
    id Int @id @default(autoincrement())
    uid String @unique
    uname String 
    fansNum Int @default(0)// 粉丝数
    likeAbility Int @default(0) // 好感度
    entryNum Int @default(0) //进房次数
    firstEntryDate String?  //首次进房日期 YYYY-MM-DD HH:mm:ss
    latestEntryDate String? //最后一次进房 YYYY-MM-DD HH:mm:ss
    latestSpeakDate String? //最后一次发言 YYYY-MM-DD HH:mm:ss
    latestSpeakId Int?
}
// 房间
model Room{
    id Int @id @default(autoincrement())
    roomId String @unique //房间号
    roomOwnerUid String @unique //主播uid
    description String
    parentAreaName String
    title String
    userCover String
    keyframe String
    tags String
    areaName String
}
// 房间的直播情况
model Live{
  id Int @id @default(autoincrement())
  roomId String //房间号
  fans Int @default(0) //x人看过
  entryNum Int @default(0)//进房量
  speakNum Int @default(0)//发言数
  redNoticeNum Int @default(0) //红色警告数
  fansClub Int @default(0) //粉丝团
  date String// 日期 YYYY-MM-DD
}

// 发言
model Speak{
    id Int @id @default(autoincrement())
    uid String //关联用户uid
    roomId String //关联直播间
    content String //发言内容
    date String // 发言时间 YYYY-MM-DD HH:mm:ss
}
// 红色警告
model RedNotice{
  id  Int @id @default(autoincrement())
  roomId String //关联直播间
  redNoticeTag Int // 对应真实事件消息更新中red_notice标志
  date String // 警告时间 YYYY-MM-DD HH:mm:ss
}
// 用户相对于某直播间进入数据
model UserEntry{
  id Int @id @default(autoincrement())
  first String?
  latest String?
  num Int? //进入直播间次数
}
// 用户相对于某直播间的弹幕数据
model UserDanmu{
  id Int @id @default(autoincrement())
  uid String
  first String? //第一次发送弹幕
  latest String? //最后一次发送弹幕
  num Int? //弹幕数量
}
//用户相对于某直播间的上舰数据
model UserCaptain{
  id Int @id @default(autoincrement())
  uid String
  first String? //第一次上舰
  latest String? //最后一次上舰
  num Int? //上舰次数
}
//用户相对于某直播间的点赞
model UserLike{
  id Int @id @default(autoincrement())
  uid String
  first String? //第一次点赞
  latest String? //最后一次点赞
  num Int?//点赞次数
}
//用户相对于某直播间的送礼数据
model UserGift{
  id Int @id @default(autoincrement())
  uid String
  first String? //第一次送礼
  latest String? //最后一次送礼
  num Int? //送礼次数
}
//送礼
model Gift{
  id Int @id @default(autoincrement())
  uid String //送礼的用户
  date String //送礼时间
}
//用户相对于某直播间好感度
model UserFavor{
  id Int @id @default(autoincrement())
  uid String //用户
  favor Int @default(0) //好感度
}
//配置项
model Options{
    id Int @id @default(autoincrement())
    optionName String @unique
    optionValue String
}