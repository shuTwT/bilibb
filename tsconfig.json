{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "useDefineForClassFields": true,
      "moduleResolution": "Node",
      "skipLibCheck": true,
      "strict": false,
      "jsx": "preserve",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "lib": ["ESNext", "DOM"],
      "noEmit": true,
      "allowImportingTsExtensions": true,
      "experimentalDecorators": true
    },
    "exclude": ["dist", "node_modules"]
  }
  