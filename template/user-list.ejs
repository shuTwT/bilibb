<!DOCTYPE html>
<html >
<head>
    <meta charset="UTF-8">
    <meta name='referrer' content='never'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/component/pear/css/pear.css" />
</head>
<body>
    <div class="pear-container">
        <div class="layui-row layui-col-space10">
            <div class="layui-col">
                <div class="layui-card">
                    <div class="layui-card-body">
                        <form class="layui-form layui-row layui-col-space16">
                            <div class="layui-col-xs3">
                                <div class="layui-input-wrap">
                                    <div class="layui-input-prefix">
                                        <i class="layui-icon layui-icon-username"></i>
                                    </div>
                                    <input type="text" name="uname" value="" placeholder="用户名" class="layui-input"
                                        lay-affix="clear">
                                </div>
                            </div>
                            <div class="layui-col-xs3">
                                <div class="layui-input-wrap">
                                    <input type="text" name="content" value="" placeholder="弹幕内容" class="layui-input"
                                        lay-affix="clear">
                                </div>
                            </div>
                            <div class="layui-btn-container layui-col-xs6">
                                <button class="layui-btn" lay-submit lay-filter="users-table-search">Search</button>
                                <button type="reset" class="layui-btn layui-btn-primary">Clear</button>
                            </div>
                        </form>
                        <div class="layui-rorw layui-col-space16">
                            <table id="users-table" lay-filter="users-table">
                            </table>
                            <template id="fa-templet">
                                <img style="object-fit: cover;width: 64px;height: 64px;" src="{{=d.User.fa}}" onerror="this.src='/avatar.webp';this.onerror=null;" alt="" >
                            </template>
                            <template id="opera-templet">
                                <div>
                                    <button class="layui-btn layui-btn-sm" lay-event="detail">详细</button>
                                </div>
                            </template>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/component/layui/layui.js"></script>
    <script src="/component/pear/pear.js"></script>
    <script>
        const roomId='<%=roomId%>'
        layui.use(function(){
            var table =layui.table,
                form = layui.form;

                table.render({
                    elem:'#users-table',
                    url:'/api/v1/danmu/list/'+roomId,
                    page:true,
                    cols:[[
                        { type: 'checkbox', fixed: 'flex' },
                        { field:'User.uname',title:'用户名',templet:function(d){return d.User.uname}},
                        { field:'User.fa',title:'头像',templet:'#fa-templet'},
                        { field:'content',title:'弹幕内容'},
                        { field:'date',title:'时间'},
                        { width: 80, title: '操作', templet: '#opera-templet' }
                    ]]
                });

                table.on('tool(users-table)', function (obj) {
                    var data = obj.data; // 得到当前行数据
                    var dataCache = obj.dataCache; // 得到当前行缓存数据，包含特定字段 --- 2.8.8+
                    var layEvent = obj.event; // 获得元素对应的 lay-event 属性值
                    if (layEvent == 'detail') {
                        layer.open({
                            type: 2,
                            title: ' ',
                            closeBtn: 1,
                            area: ['100%', '100%'],
                            content: `/view/user/info/${data.uid}/${roomId}`
                        })
                    }
                })
            
                form.on('submit(users-table-search)', function (data) {
                    var field = data.field
                    table.reload('users-table', {
                        page: {
                            curr: 1
                        },
                        where: field
                    })
                    layer.msg('搜索成功')
                    return false
                })
                
        })
    </script>
    <style>
        .layui-table-cell{
            line-height: 100px;
            height: 100px;
        }
    </style>
</body>
    